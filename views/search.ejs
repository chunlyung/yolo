  border: 1px solid #ddd;
  padding: 10px;
  text-align: center;
  background: white;
  border-radius: 8px;
  transition: box-shadow 0.2s ease;
}

.product-card:hover {
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.product-card img {
  width: 100%;
  height: auto;
  max-height: 180px;
  object-fit: contain;
}

